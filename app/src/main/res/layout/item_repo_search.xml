<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

    <ImageView android:layout_width="64dp"
               android:layout_height="64dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:scaleType="centerCrop"
               android:id="@+id/iv_repo"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20dp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="8dp"
              app:layout_constraintLeft_toRightOf="@+id/iv_repo"
              android:id="@+id/tv_repo_title"
              android:text="hello"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#6D6D6D"
              android:layout_marginTop="4dp"
              app:layout_constraintTop_toBottomOf="@+id/tv_repo_title"
              android:text="description"
              app:layout_constraintLeft_toLeftOf="@+id/tv_repo_title"
              android:id="@+id/tv_repo_desc"
    />
</android.support.constraint.ConstraintLayout>